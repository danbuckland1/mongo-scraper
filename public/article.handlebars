<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
    </div>
    <div class="caption">
        <h1>Mongo Scraper</h1>
        <p>Overhead In New York</p>
    </div>
</div>


<div class="card">
    {{#each articles}}
</h3>

</div>

<div class="card">
    {{#each articles}}
    <h3 data-_id={{this._id}} class="card-header">Article

        <button type="button" class="btn btn-danger article-btn">Delete From Saved</button>
        <button type="button" class="btn btn-primary article-btn">Article Notes</button>
    </h3>
    <div class="card-body">
        <p class="card-text"><a class="article-link" target="_blank" rel="noopener noreferrer" href="{{this.url}}">{{this.headline}}</a>
            <a class="btn btn-danger delete">Delete From Saved</a>
            <a class="btn btn-info notes">Article Notes</a>
            </h3>
    </div>
    <div class="card-body">{{this.summary}}</div>
</div>
{{/each}}
{{#unless articles.length}}
<div class="alert alert-warning text-center">
    <h4>Uh Oh. Looks like we don't have any saved articles.</h4>
</div>
<div class="card">
    <div class="card-header text-center">
        <h3>Would You Like to Browse Available Articles?</h3>
    </div>
    <div class="card-body text-center">
        <h4>
            <a href="/">Browse Articles</a>
        </h4>
    </div>
</div>
{{/unless}}


<footer class="footer">
    <div class="container">
        <p>OHINY Mongo Scraper</p>
    </div>
</footer>